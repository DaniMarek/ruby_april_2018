<div class="container-fluid bg-2 text-center">
	<form action="/">
	<% if flash[:success] %>
		<div class="success">
			<p><%= flash[:success] %></p>
		</div>
	<% end %>
		<h2>Submitted Info</h2>
		<div class='form-group'>
			<h3 class="control-label col-md-4" for="name">Name: <%= @results['name'] %></h3>
		</div>
		<div class='form-group'>
			<h3 class="control-label col-md-4" for="dojo">Dojo Location: <%= @results['dojo'] %></h3>
		</div>
		<div class='form-group'>
			<h3 class="control-label col-md-4" for="language">Favorite Language: <%= @results['language'] %></h3>
		</div>
		<div class='form-group'>
			<h3 class="control-label col-md-4" for="comment">Comment: <%= @results['comment'] %></h3>
		</div>
		<div class='form-group'>
			<button type="submit" name="back">Go Back</button>
		</div>
	</form>
</div>

